<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SteamStore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <NavigationView x:Name="NavView" SelectionChanged="NavView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" Tag="HomePage" />
                <NavigationViewItem Content="Cart" Tag="CartPage" />
                <NavigationViewItem Content="Points Shop" Tag="PointsShop" />
                <NavigationViewItem Content="Wishlist" Tag="WishListPage" />
                <NavigationViewItem Content="Developer" Tag="DeveloperPage" />
            </NavigationView.MenuItems>
            <!-- Use MainFrame instead of ContentFrame -->
            <Frame x:Name="MainFrame" />
        </NavigationView>
    </Grid>
</Window>