<Page x:Class="SteamStore.Pages.CreditCardPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Main Content -->
        <StackPanel Padding="20">
            <TextBlock Text="Credit Card Payment" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <!-- Display Total Price -->
            <TextBlock x:Name="TotalPriceTextBlock" FontSize="16" Margin="0,0,0,10" />

            <TextBox x:Name="CardNumberTextBox" Header="Card Number" PlaceholderText="Enter card number" />
            <TextBox x:Name="ExpirationDateTextBox" Header="Expiration Date (MM/YY)" PlaceholderText="MM/YY" />
            <TextBox x:Name="CvvTextBox" Header="CVV" PlaceholderText="Enter CVV" />
            <TextBox x:Name="OwnerNameTextBox" Header="Card Owner Name" PlaceholderText="Enter owner name" />

            <Button x:Name="ProcessPaymentButton" Content="Process Payment" Click="ProcessPaymentButton_Click" Margin="0,20,0,0" />
        </StackPanel>

        <!-- Notification Dialog -->
        <ContentDialog x:Name="NotificationDialog"
                       Title="Notification"
                       CloseButtonText="OK"
                       Opened="NotificationDialog_Opened">
            <TextBlock x:Name="NotificationMessageTextBlock" />
        </ContentDialog>
    </Grid>
</Page>