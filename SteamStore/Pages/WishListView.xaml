<Page x:Class="SteamStore.Pages.WishListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamStore.Pages"
        xmlns:utils="using:SteamStore.Utils"
        mc:Ignorable="d">
    
    <Page.Resources>
        <utils:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <utils:DiscountVisibilityConverter x:Key="DiscountVisibilityConverter"/>
        
        <!-- Steam-like styles -->
        <Style x:Key="SteamButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#67c1f5"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SteamDangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#c94141"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SteamSearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="PlaceholderForeground" Value="#666666"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
        
        <Style x:Key="SteamComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="#1b2838">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Search and Filter Controls -->
        <Grid Grid.Row="0" Background="#2a475e">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Margin="20,10"
                        Spacing="20">
                <Button Content="← Store"
                        Click="BackButton_Click"
                        Style="{StaticResource SteamButtonStyle}"/>
                
                <TextBox x:Name="SearchBox"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="SearchBox_TextChanged"
                         PlaceholderText="Search wishlist..."
                         Style="{StaticResource SteamSearchBox}"
                         Width="300"/>
            </StackPanel>

            <!-- Right Section -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Margin="20,10"
                        Spacing="10"
                        HorizontalAlignment="Right">
                <ComboBox x:Name="FilterComboBox"
                         Style="{StaticResource SteamComboBox}"
                         SelectionChanged="FilterComboBox_SelectionChanged"
                         PlaceholderText="Filter by Rating"
                         MinWidth="150">
                    <ComboBoxItem Content="All Games"/>
                    <ComboBoxItem Content="Overwhelmingly Positive (9+)"/>
                    <ComboBoxItem Content="Very Positive (8-9)"/>
                    <ComboBoxItem Content="Mixed (4-8)"/>
                    <ComboBoxItem Content="Negative (&lt;4)"/>
                </ComboBox>
                
                <ComboBox x:Name="SortComboBox"
                         Style="{StaticResource SteamComboBox}"
                         SelectionChanged="SortComboBox_SelectionChanged"
                         PlaceholderText="Sort by"
                         MinWidth="150">
                    <ComboBoxItem Content="Price (Low to High)"/>
                    <ComboBoxItem Content="Price (High to Low)"/>
                    <ComboBoxItem Content="Rating (High to Low)"/>
                    <ComboBoxItem Content="Discount (High to Low)"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Empty State Message -->
            <TextBlock Text="Your wishlist is empty. Browse the store to add games!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#66c0f4"
                       TextAlignment="Center"
                       Visibility="{Binding WishListGames.Count, Converter={StaticResource CountToVisibilityConverter}}"/>

            <!-- Games Grid -->
            <ScrollViewer Padding="20"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollMode="Auto">
                <ItemsControl ItemsSource="{Binding WishListGames}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VariableSizedWrapGrid ItemWidth="600" 
                                                 ItemHeight="160"
                                                 Orientation="Horizontal"
                                                 HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="10">
                                <!-- Game Card -->
                                <Border Background="#16202d" 
                                        BorderBrush="#000000" 
                                        BorderThickness="1" 
                                        CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="280"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Game Image -->
                                        <Image Source="{Binding ImagePath}" 
                                               Stretch="UniformToFill"
                                               Height="140"/>

                                        <!-- Game Details -->
                                        <StackPanel Grid.Column="1" 
                                                    Padding="15,10"
                                                    MaxWidth="300">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="18" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#ffffff"
                                                       TextWrapping="Wrap"/>
                                            
                                            <!-- Price and Discount -->
                                            <Grid Margin="0,10,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Discount Badge -->
                                                <Border Grid.Column="0" 
                                                        Background="#4c6b22" 
                                                        Padding="5,2" 
                                                        CornerRadius="2"
                                                        Visibility="{Binding Discount, Converter={StaticResource DiscountVisibilityConverter}}">
                                                    <TextBlock>
                                                        <Run Text="-"/>
                                                        <Run Text="{Binding Discount}"/>
                                                        <Run Text="%"/>
                                                    </TextBlock>
                                                </Border>
                                                
                                                <!-- Price -->
                                                <TextBlock Grid.Column="2" 
                                                           Foreground="#ffffff" 
                                                           FontWeight="SemiBold">
                                                    <Run Text="$"/>
                                                    <Run Text="{Binding Price}"/>
                                                </TextBlock>
                                            </Grid>
                                            
                                            <!-- Rating -->
                                            <StackPanel Orientation="Horizontal" 
                                                        Margin="0,5,0,10">
                                                <TextBlock Text="Rating: " 
                                                           Foreground="#8f98a0"/>
                                                <TextBlock Text="{Binding Rating}" 
                                                           Foreground="#66c0f4"/>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Orientation="Horizontal" 
                                                        Spacing="10">
                                                <Button Content="View Details" 
                                                        Click="ViewDetails_Click"
                                                        Style="{StaticResource SteamButtonStyle}"/>
                                                <Button Content="Remove" 
                                                        Click="RemoveFromWishlist_Click"
                                                        Style="{StaticResource SteamDangerButtonStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page> 